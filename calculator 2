x=int(input("enter a number "))
y=int(input("enter a number "))
op=input("any operator to exercise any operation ")
if op=='+':
     print("answer is ", x+y)
elif op=='-':
    print("answer is ", x-y)
elif op == '*':
    print("answer is ", x * y)
elif op=='/':
    print("answer is ", x/y)
elif op=='%':
    print("remainder is ", x%y)
else:
    print ("invalid input")
